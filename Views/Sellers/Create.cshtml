@model SalesWebMvc.Models.Seller
@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<h4>Seller</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">Name:<br />
                <label asp-for="name" class="control-label">
                    <input asp-for="name" class="form-control" />
                </label>
            </div>
            <div class="form-group">Email:<br />
                <label asp-for="email" class="control-label">
                    <input asp-for="email" class="form-control" />
                </label>
            </div>
            <div class="form-group">Birth Date:<br />
                <label asp-for="birthDate" class="control-label">
                    <input asp-for="birthDate" class="form-control" />
                </label>
            </div>
            <div class="form-group">Base Salary:<br />
                <label asp-for="baseSalary" class="control-label">
                    <input asp-for="baseSalary" class="form-control" />
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>